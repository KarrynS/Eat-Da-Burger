<h1 class="mainTitle">Eat-Da-Burger</h1>
    <div class="row">
        <div class="col col-12">
            <div class="row">
                <div class="col col-12">
                    <h3 class="sectionTitle" id="createTitle">Enter a burger you'd like to eat</h3>
                </div>
            </div>
            <div class="row">
                <div class="col col-12">
                    <form id="create-form">
                        <div class="form-group">
                            <input type="text" id="newBurger" name="name">
                        </div>
                        <button type="submit" class="btn btn-warning">Add Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-12 col-md-6">
            <div class="row">
                <div class="col col-12">
                    <h3 class="sectionTitle">Burgers waiting to be eaten</h3>
                </div>
                <div class="col col-12">
                    <ul class="burgerList">
                        {{#each burgers}}
                        {{#unless devoured}}
                        <li>
                            🍔
                            {{id}}.
                            {{burger_name}} 
                            <button class="devourIt btn-danger" data-id="{{this.id}}" data-newdevoured="true">
                                Devour it!</button>
                            <hr>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col col-12 col-md-6">
            <div class="row">
                <div class="col col-12">
                    <h3 class="sectionTitle">Burgers Devoured</h3>
                </div>
                <div class="col col-12">
                    <ul class="burgerList">
                        {{#each burgers}}
                        {{#if devoured}}
                        <li>
                            🍴 
                            {{burger_name}}
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>